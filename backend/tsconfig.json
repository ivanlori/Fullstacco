{
	"compilerOptions": {
		"target": "es5",
		"module": "CommonJS",
		"lib": [
			"ES2020"
		],
		"outDir": "./build",
		"rootDir": "src/",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	]
}
